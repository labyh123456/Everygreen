<h2>customer Management SysTem</h2>

<h3> <a href="/admin/customer_management/create_customer">  Create New customer  </a> </h3>

<table border="1" cellpadding="5">
    <tr>
      <th>index</th>  
    <th>_id</th>
    <th>Email</th>
    <th>Full Name</th>
    <th>City</th>
    <th>Country</th>
    <th>Registered Date</th>
    <th>Action</th>
    </tr>
    <% let counter = 0 %>
<% customers.forEach(customer => { %>
    
    <tr>
        <td> <%= ++counter %></td>
        <td><%= customer._id %> </td>
        <td><%= customer.email %></td>
        <td> <%= customer.fullname %> </td>
        <td><%= customer.city %> </td>
        <td><%= customer.country %></td>
        <td><%= customer.registerdate.toDateString() + ' ' +  customer.registerdate.toTimeString().split(' ')[0] %></td>
        <td> <a href="/admin/customer_management/<%= customer._id%>/edit">Edit</a>
        <td>   <%- include("../../partials/delete_form", {url:`/admin/customer_management/${customer._id}` }) %></td>
    </tr>

<% }) %>    
</table>