<h2>Book Management</h2>

<h3> <a href="/admin/book_management/create_new_book"> Create New Book </a> </h3>

<table border="1" cellpadding="5">
    <tr>
        <th>index</th>
        <th>_id</th>
        <th>Image</th>
        <th>Title</th>
        <th>Author</th>
        <th>category</th>
        <th>Price</th>
        <th>Last Update</th>
        <th>Actions</th>
    </tr>
    <% let counter=0 %>
        <% books.forEach(book=> { %>

            <tr>
                <td>
                    <%= ++counter %>
                </td>
                <td>
                    <%= book._id %>
                </td>
                <td>
                  <a href="/admin/book_management/<%= book._id %>">  <img src="<%= book.coverImagePath %>" height="110px" width="84px"> </a>
                </td>
                <td>
                    <%= book.title %>
                </td>

                <td>
                    <%= book.author %>
                </td>
                <td> <%= book.categoryid.name %> </td>
                <td><%= book.price %></td>
                <td><%= book.lastupdate.toDateString() + ' ' + book.lastupdate.toTimeString().split(' ')[0] %> </td>
                <% console.log(book.lastupdate.toDateString()+ ' ' + book.lastupdate.toTimeString().split(' ')[0]) %>
                <td> <a href="/admin/add_book/<%= order_id %>/<%= book._id%>">Add Book</a> 
                    <%- include("../../partials/delete_form", {url:`/admin/book_management/${book._id}` }) %>
                </td>
            </tr>
            <% }) %>
</table>