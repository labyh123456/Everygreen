<h2>Category Management</h2>

<h3> <a href="/admin/create_category"> Create New Category </a> </h3>

<table border="1" cellpadding="5">
    <tr>
        <th>index</th>
        <th>_id</th>
        <th>name</th>
        <th>Action</th>
    </tr>
    <% let counter=0 %>
        <% categories.forEach(category=> { %>

            <tr>
                <td>
                    <%= ++counter %>
                </td>
                <td>
                    <%= category._id %>
                </td>
                <td>
                    <%= category.name %>
                </td>
                <td> <a href="/admin/category_management/<%= category._id%>/edit">Edit</a>
                    <td>   <%- include("../../partials/delete_form", {url:`/admin/category/${category._id}` }) %></td>
            </tr>
            <% }) %>
</table>